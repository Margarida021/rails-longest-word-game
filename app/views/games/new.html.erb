<h1 class="text-center">New Game</h1>
<div class="d-flex justify-content-center">
<% @letters.each do |letter| %>
  <h3 class="border p-3 rounded bg-info text-white border-info ml-2 mt-2"><%= letter %></h3>
<% end %>
</div>

<div class="d-flex justify-content-center">
<label class="text-center mt-3">What is the longest word you can find?</label>
</div>
<div class="d-flex justify-content-center">
<form action="score" method="post" data-turbo="false" class="mt-3">
  <input type="text" name="word">
  <input type="submit" value="Send!" class="btn btn-info">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join() %>
</div>
</form>
